    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "hardhat-diamond-abi": "^3.0.0",
    "hardhat-gas-reporter": "^1.0.4",
    "solidity-coverage": "^0.7.16",
    "typechain": "^8.0.0",
    "typescript": "^4.5.2"
  },
  "devDependencies": {
    "@defi-wonderland/smock": "^2.0.7",
    "@typechain/ethers-v5": "^10.0.0",
